{
    "name": "e3stpavel/cnvrtr",
    "description": "Currency converter PHP based.",
    "type": "project",
    "license": "MIT",
    "require": {
        "ext-pdo": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "test/"
        }
    },
    "scripts": {
        "phpunit": ".\\vendor\\bin\\phpunit --configuration phpunit.xml",
        "start": "php public\\index.php",
        "serve": "php -S localhost:8080 -t public/",
        "test": [
            ".\\vendor\\bin\\phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src test",
            ".\\vendor\\bin\\phpunit --configuration phpunit.xml"
        ]
    }
}
